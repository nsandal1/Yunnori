#Player Characters



class Player(object):
    stillPlaying=True
    def __init__(self, rolls=0, charac):
        self.rolls=rolls
        self.position=0

    def randnum(self, rolls, position):
        self.rolls=random.choice((-1, 1, 2, 3, 4, 5))
        self.position=self.position+self.rolls
        
        

